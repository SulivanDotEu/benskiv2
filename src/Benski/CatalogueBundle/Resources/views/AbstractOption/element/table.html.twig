{# empty Twig template #}
<table class="table table-striped table-condensed">
   <thead>
      <tr>
         <th>Id</th>
         <th>Nom</th>
         <th>Description</th>
         <th>{{ "Type"|trans}}</th>
         <th>Explication</th>
         <th>Actions</th>
      </tr>
   </thead>
   <tbody>
        {% for entity in entities %}
         <tr>
            <td><a href="{{ path('option_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ ("option.type."~entity.type)|trans }}</td>
            <td>{{ entity.explication }}</td>
            <td>
               <ul>
                  <li>
                     <a href="{{ path('option_show', { 'id': entity.id }) }}">show</a>
                  </li>
               </ul>
            </td>
         </tr>
        {% endfor %}
      </tbody>
   </table>