{% extends 'BenskiCatalogueBundle:Pack:layout.html.twig' %}

{% block header %}
<h1>Pack list</h1>
{% endblock %}


{% block breadcrumb %}
{{ parent() }}
<li class="active">list</li>
{% endblock %}

{% block container_header_right %}
<a class="btn btn-primary" href="{{ path('pack_new') }}">
    <i class="icon-plus icon-white"></i> 
    Create a new entry
</a>
{% endblock %}



{% block body -%}
<a class="btn btn-primary" href="{{ path('pack_new') }}">
    <i class="icon-magnet icon-white"></i>
    Associer une option
</a>

<hr>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Identifiant interne</th>
            <th>Nom</th>
            <th>Qualite</th>
            <th>Prix</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('pack_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{{ entity.adminId }}</td>
            <td>
                {{ macro.print_stars_bs2(entity.qualite) }}
            </td>
            <td>{{ entity.prix }}</td>
            <td>
                <div class="btn-group">
                    <a class="btn" href="{{ path('pack_show', { 'id': entity.id }) }} ">
                        <i class="icon-eye-open"></i> Show</a>
                    <a class="btn" href="{{ path('pack_edit', { 'id': entity.id }) }}">
                        <i class="icon-pencil"></i> Edit</a>
                    {% render(controller("BenskiContentBundle:Link:displayBindButton", { 'object' : entity })) %}

                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>


    {% endblock %}
