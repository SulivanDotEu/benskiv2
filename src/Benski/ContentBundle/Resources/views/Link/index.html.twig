{% extends 'BenskiContentBundle:Link:layout.html.twig' %}

{% block body -%}
<h1>Link list</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Classname</th>
            <th>Ownerid</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td>{{ entity.id }}</a></td>
            <td>{{ entity.className }}</td>
            <td>{{ entity.ownerId }}</td>
            <td>
                <div class="btn-group">
                    <a class="btn" href="{{ path('link_show', { 'id': entity.id }) }} ">
                        <i class="icon-eye-open"></i> Show</a>
                    <a class="btn" href="{{ path('link_edit', { 'id': entity.id }) }}">
                        <i class="icon-pencil"></i> Edit</a>
                    <a class="btn" href="{{ path('link_unbind', { 'id': entity.id }) }}">
                        <i class="icon-pencil"></i> Unbind</a>
                </div>

            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

    {% endblock %}
