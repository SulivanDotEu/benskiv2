{% extends 'BenskiContentBundle:News:layout.html.twig' %}

{% block body -%}
<h1>News list</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Article</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('news_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td><a href="{{ path('article_show', { 'id': entity.article.id }) }}">
{{ entity.article.titre }}
                </a>
            </td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('news_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('news_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('news_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
    {% endblock %}
