{% trans_default_domain 'FOSUserBundle' %}


<form role="form" class="form-horizontal" action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST">
{{ form_errors(form) }}
    <div class="row">
        <div class="form-group">
        {{ form_label(form.current_password, label|default(null), { 'label_attr': { 'class': 'col-sm-3 control-label' } }) }}
            <div class="col-sm-8">
        {{ form_widget(form.current_password, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.current_password) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
        {{ form_label(form.plainPassword.first, label|default(null), { 'label_attr': { 'class': 'col-sm-3 control-label' } }) }}
            <div class="col-sm-8">
        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
        {{ form_label(form.plainPassword.second, label|default(null), { 'label_attr': { 'class': 'col-sm-3 control-label' } }) }}
            <div class="col-sm-8">
        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>
        </div>
    </div>
    
    {{ form_rest(form)}}

    <div class="row">
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <input type="submit" class="btn btn-default" value="{{ 'change_password.submit'|trans }}" />
            </div>
        </div>
    </div>

</form>
