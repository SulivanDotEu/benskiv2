{% extends 'BenskiUserBundle::layout.html.twig' %}


{% block header %}
<h1>Destination list</h1>
{% endblock %}


{% block breadcrumb %}
{{ parent() }}
<li class="active">list</li>
{% endblock %}

{% block container_header_right %}
<a class="btn btn-primary" href="{{ path('destination_new') }}">
   <i class="icon-plus icon-white"></i> 
   Create a new entry
</a>
{% endblock %}

{% block body -%}

<table class="table table-striped table-condensed ">
   <thead>
      <tr>
         <th>Id</th>
         <th>Login</th>
         <th>Prénom</th>
         <th>Nom</th>
         <th>Adresse</th>
         <th>Dernière connexion</th>
         <th>Actions</th>
      </tr>
   </thead>
   <tbody>
        {% for entity in entities %}
         <tr>
            <td><a href="">{{ entity.id }}</a></td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.person.firstName }}</td>
            <td>{{ entity.person.lastName }}</td>
            <td>{{ entity.person.address.city }}</td>
            <td></td>
            <td>
               <div class="btn-group">
                  <a class="btn" href="">
                     <i class="icon-eye-open"></i> Show</a>
                  <a class="btn" href="">
                     <i class="icon-pencil"></i> Edit</a>
               </div>

            </td>
         </tr>
        {% endfor %}
      </tbody>
   </table>
    {% endblock %}
