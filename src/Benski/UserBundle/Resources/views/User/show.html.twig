{% extends 'BenskiCatalogueBundle:Destination:layout.html.twig' %}

{% block breadcrumb %}
{{ parent() }}
<li class="active">Show</li>
{% endblock %}

{% block header %}
<h1>Destination</h1>
{% endblock %}

{% block body -%}


<table class="table table-striped">
   <tbody>
      <tr>
         <th>Id</th>
         <td>{{ entity.id }}</td>
      </tr>
      <tr>
         <th>Nom</th>
         <td>{{ entity.nom }}</td>
      </tr>
      <tr>
         <th>Pays</th>
         <td>{{ entity.pays }}</td>
      </tr>
   </tbody>
</table>
{% endblock %}


{% block container_header_right %}
<div class="btn-group">
   <a class="btn " href="{{ path('destination') }}">
      <i class="icon-chevron-left"></i> 
      Back to the list
   </a>
   <a class="btn " href="{{ path('destination_edit', { 'id': entity.id }) }}">
      <i class="icon-pencil"></i> Edit</a>
</a>

</div>
{% endblock %}