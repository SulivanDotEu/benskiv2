{% extends 'BenskiUserBundle:User:layout.html.twig' %}

{% block body -%}
<h1>User</h1>

<div class="row-fluid">
    <div class="span6">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ entity.username }}</td>
                </tr>
                <tr>
                    <th>Usernamecanonical</th>
                    <td>{{ entity.usernameCanonical }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ entity.email }}</td>
                </tr>
                <tr>
                    <th>Emailcanonical</th>
                    <td>{{ entity.emailCanonical }}</td>
                </tr>
                <tr>
                    <th>Enabled</th>
                    <td>{{ entity.enabled }}</td>
                </tr>
                <tr>
                    <th>Salt</th>
                    <td>{{ entity.salt }}</td>
                </tr>
                <tr>
                    <th>Lastlogin</th>
                    <td>{{ entity.lastLogin|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Locked</th>
                    <td>{{ entity.locked }}</td>
                </tr>
                <tr>
                    <th>Expired</th>
                    <td>{{ entity.expired }}</td>
                </tr>

                <tr>
                    <th>Confirmationtoken</th>
                    <td>{{ entity.confirmationToken }}</td>
                </tr>
                <tr>
                    <th>Passwordrequestedat</th>
                    <td>{{ entity.passwordRequestedAt|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>
                        <ul>
                        {% for role in entity.roles %}
                            <li>{{ role }}</li>
                        {% endfor %}
                        </ul>
                    </td>
                </tr>
                <tr>
                    <th>Credentialsexpired</th>
                    <td>{{ entity.credentialsExpired }}</td>
                </tr>


            </tbody>
        </table>
    </div>
    <div class="span6">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ entity.person.lastName }}</td>
                </tr>
                <tr>
                    <th>Pr√©nom</th>
                    <td>{{ entity.person.firstName }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ entity.person.email }}</td>
                </tr>
                <tr>
                    <th>Naissance</th>
                    <td>{{ entity.person.dateOfBirth|date('d/m/Y') }}</td>
                </tr>
                <tr>
                    <th>Taille</th>
                    <td>{{ entity.person.taille }}</td>
                </tr>
                <tr>
                    <th>Poids</th>
                    <td>{{ entity.person.poid }}</td>
                </tr>
                <tr>
                    <th>GSM</th>
                    <td>{{ entity.person.phoneNumber }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
