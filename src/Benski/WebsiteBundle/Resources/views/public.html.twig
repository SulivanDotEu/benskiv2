<html lang="fr">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{% block head_meta_description %} {% endblock %}">
    <meta name="author" content="Benjamin Ellis">

    <title>{% block title %}Benski{% endblock %}</title>

    {% block stylesheets %}

        {#<link rel="stylesheet" href="{{ asset('bs3/css/bootstrap.min.css') }}" type="text/css"/>#}
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
        {#<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css">#}

        <link rel="stylesheet" href="{{ asset('css/public_v2.css') }}" type="text/css"/>
        {% if is_granted('ROLE_ADMIN') %}
            <link rel="stylesheet" href="{{ asset('css/simple_cms.css') }}" type="text/css"/>
        {% endif %}
    {% endblock %}



</head>

<body>

<div style="position: absolute; top:0px; padding: 10px; z-index: 5; width: 100%;">
    <div class="pull-left">
        <a href="{{ path('benski_website_public_homepage') }}" class="btn btn-link"
           style="font-size: 16px; font-weight: bold; color: #000000;">
            Benski
        </a>
    </div>
    <div class="pull-right">
        {{ include("@BenskiWebsite/Components/header_right.html.twig") }}
    </div>

</div>

<div id="hero" style="height: 460px;
        position: relative;
        color: white;
        overflow: hidden;
        ">
    <div class="homepage_hero_unit_background_container" style="padding-top: 80px;
        ">
        <img class="homepage_hero_unit_background js_delayed_image"
             src="{{ asset('img/background3.png') }}" class="" style="
                position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            min-height: 460px;
            min-width: 900px;">

        <div style="position: absolute;
                    z-index: 3;
                    width: 100%;">
            <div class="container">
                <div class="col-xs-12">
                    {% block header %}
                        <h1 id="homepage_title" style="
                        text-shadow: 2px 2px 0px rgba(255, 255, 255, 0.5);
                        color: black;
                        text-transform: uppercase;
                        /*font-size: 60px;*/
                        font-weight: 600;
                        text-align: center;
                        ">
                            {% block header_content %}
                                Des séjours en altitude de qualités pour la famille et les amis à Risoul!
                            {% endblock %}
                        </h1>
                    {% endblock %}
                </div>
            </div>
        </div>

        <div style="position: absolute; width: 100%; background-color: rgba(0,102,204, 0.8); min-height: 30px; z-index: 5;bottom: 0;"
             class="text-center">
            <div class="container">
                <div class="col-sm-12">
                    <h4 style="margin: 0px; padding: 10px">
                        {% block header_bottom %}
                            {{ render(controller('BenskiWebsiteBundle:Public:marketAction')) }}

                        {% endblock %}
                    </h4>
                </div>
            </div>
        </div>

    </div>
</div>

{% block parent_container %}
    <div class="container" style="padding-top: 50px; padding-bottom: 50px;">
        <div class="row">
            {% block container %}
                <div class="col-sm-12">
                    {% block body %}

                    {% endblock %}
                </div>
            {% endblock %}
        </div>


    </div>
{% endblock %}

<footer id="footer">
    <div class="container">
        <div class="row">
            <div class="col-sm-3 col-md-offset-2 col-md-2 col-xs-6 col-xs-offset-0">
                <h5>Benski</h5>
                <ul class="list-unstyled">
                    <li>
                        <a href="{{ render(controller('BenskiWebsiteBundle:PublicPage:getHref', { 'internalName': 'TEAM' })) }}"
                           class="footer">
                            L'équipe</a>
                    </li>
                    <li>
                        <a href="{{ render(controller('BenskiWebsiteBundle:PublicPage:getHref', { 'internalName': 'CONCEPT' })) }}"
                           class="footer">
                            Le concept
                        </a>
                    </li>
                    <li>
                        <a href="{{ render(controller('BenskiWebsiteBundle:PublicPage:getHref', { 'internalName': 'PARTNERS' })) }}"
                           class="footer">
                            Nos partenaires
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-sm-3 col-md-2 col-xs-6">
                <h5>Nos destinations</h5>
                <ul class="list-unstyled">
                    <li>
                        <a href="{{ render(controller('BenskiWebsiteBundle:PublicPage:getHref', { 'internalName': 'RISOUL' })) }}"
                           class="footer">
                            Risoul
                        </a>
                    </li>
                </ul>
            </div>
            <div class="clearfix visible-xs"></div>
            <div class="col-sm-3 col-md-2 col-xs-6">
                <h5>Services</h5>
                <ul class="list-unstyled">
                    <li>
                        <a href="{{ render(controller('BenskiWebsiteBundle:PublicPage:getHref', { 'internalName': 'APPART' })) }}"
                           class="footer">
                            Nos appartements</a></li>
                    <li>
                        <a href="{{ render(controller('BenskiWebsiteBundle:PublicPage:getHref', { 'internalName': 'OPTION' })) }}"
                           class="footer">
                            Nos options</a></li>
                    <li>
                        <a href="{{ render(controller('BenskiWebsiteBundle:PublicPage:getHref', { 'internalName': 'AVANTAGES' })) }}"
                           class="footer">
                            Nos avantages</a></li>
                    <li>
                        <a href="{{ render(controller('BenskiWebsiteBundle:PublicPage:getHref', { 'internalName': 'SERVICE' })) }}"
                           class="footer">
                            Nos services</a></li>
                </ul>
            </div>
            <div class="col-sm-3 col-dm-2 col-xs-6">
                <h5>Aide</h5>
                <ul class="list-unstyled">
                    <li>
                        <a href="{{ render(controller('BenskiWebsiteBundle:PublicPage:getHref', { 'internalName': 'FAQ' })) }}"
                           class="footer">
                            FAQ
                        </a>
                    </li>
                    <li>
                        <a href="{{ render(controller('BenskiWebsiteBundle:PublicPage:getHref', { 'internalName': 'CONTACT' })) }}"
                           class="footer">
                            Contact
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="credit">
            <p>© Benski 2014 All Rights Reserved. - Conditions Générales - Design by Benjamin Ellis</p>

            <p>
                <a href="#">Back to top</a>
            </p>
        </div>
    </div>
</footer>

